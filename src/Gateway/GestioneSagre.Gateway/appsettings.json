{
    "Kestrel": {
        "Limits": {
            "MaxRequestBodySize": 5242880
        }
    },
    "Serilog": {
        "MinimumLevel": "Information",
        "WriteTo": [
            {
                "Name": "Console",
                "Args": {
                    "outputTemplate": "{Timestamp:HH:mm:ss}\t{Level:u3}\t{SourceContext}\t{Message}{NewLine}{Exception}"
                }
            },
            {
                "Name": "File",
                "Args": {
                    "path": "Logs/log.txt",
                    "rollingInterval": "Day",
                    "retainedFileCountLimit": 14,
                    "restrictedToMinimumLevel": "Information",
                    "formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog",
                    "outputTemplate": "{Timestamp:HH:mm:ss}\t{Level:u3}\t{SourceContext}\t{Message}{NewLine}{Exception}"
                }
            },
            {
                "Name": "Seq",
                "Application": "Gestione Sagre Gateway",
                "Args": {
                    "serverUrl": "http://SERVER-SEQ:5341",
                    "ApiKey": "APIKEY-SERVER-SEQ",
                    "restrictedToMinimumLevel": "Information",
                    "outputTemplate": "{Timestamp:HH:mm:ss}\t{Level:u3}\t{SourceContext}\t{Message}{NewLine}{Exception}"
                }
            }
        ]
    },
    "EnvironmentDev": {
        "Swagger-Gateway": "http://localhost:5179/swagger/index.html",
        "Swagger-DataProtection": "http://localhost:5055/swagger/index.html",
        "Swagger-Utility": "",
        "SQLServer-DataProtection": "server=.\\SQLEXPRESS; initial catalog=GestioneSagre-DataProtection;Integrated Security=True;Encrypt=False",
        "SQLServer-Utility": "server=.\\SQLEXPRESS; initial catalog=GestioneSagre-Utility;Integrated Security=True;Encrypt=False"
    },
    "EnvironmentProd": {
        "Swagger-Gateway": "http://localhost:5100/swagger/index.html",
        "Swagger-DataProtection": "http://localhost:5001/swagger/index.html",
        "Swagger-Utility": "",
        "SQLServer-DataProtection": "Server=sqlserver;Database=GestioneSagre-DataProtection;User=sa;Password=PASSWORD;Encrypt=False", //Aggiornare la password
        "SQLServer-Utility": "Server=sqlserver;Database=GestioneSagre-Utility;User=sa;Password=PASSWORD;Encrypt=False" //Aggiornare la password
    }
}