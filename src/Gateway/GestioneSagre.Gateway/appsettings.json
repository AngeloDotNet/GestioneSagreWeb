{
    "Kestrel": {
        "Limits": {
            "MaxRequestBodySize": 5242880
        }
    },
    "Serilog": {
        "MinimumLevel": "Information",
        "WriteTo": [
            {
                "Name": "Console",
                "Args": {
                    "outputTemplate": "{Timestamp:HH:mm:ss}\t{Level:u3}\t{SourceContext}\t{Message}{NewLine}{Exception}"
                }
            },
            {
                "Name": "File",
                "Args": {
                    "path": "Logs/log.txt",
                    "rollingInterval": "Day",
                    "retainedFileCountLimit": 14,
                    "restrictedToMinimumLevel": "Information",
                    "formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog",
                    "outputTemplate": "{Timestamp:HH:mm:ss}\t{Level:u3}\t{SourceContext}\t{Message}{NewLine}{Exception}"
                }
            },
            {
                "Name": "Seq",
                "Application": "Gestione Sagre Gateway",
                "Args": {
                    "serverUrl": "http://infra-seq:5341",
                    "ApiKey": "APIKEY-SERVER-SEQ",
                    "restrictedToMinimumLevel": "Information",
                    "outputTemplate": "{Timestamp:HH:mm:ss}\t{Level:u3}\t{SourceContext}\t{Message}{NewLine}{Exception}"
                }
            }
        ]
    },
    "PointAPI": {
        "Name": "API Service",
        "Url": "http://api-gateway:5100/swagger/index.html"
    },
    "Servers": {
        "Seq-Host": "http://infra-seq:5341",
        "Seq-ApiKey": "APIKEY-SERVER-SEQ",
        "Redis-Host": "infra-redis",
        "Redis-Port": 6379,
        "RabbitMQ-Login": "USERNAME-RABBITMQ:PASSWORD-RABBITMQ",
        "RabbitMQ-Host": "infra-rabbitmq:5672"
    }
}