{
    "Kestrel": {
        "Limits": {
            "MaxRequestBodySize": 5242880
        }
    },
    "Serilog": {
        "MinimumLevel": "Information",
        "WriteTo": [
            {
                "Name": "Console",
                "Args": {
                    "outputTemplate": "{Timestamp:HH:mm:ss}\t{Level:u3}\t{SourceContext}\t{Message}{NewLine}{Exception}"
                }
            },
            {
                "Name": "File",
                "Args": {
                    "path": "Logs/log.txt",
                    "rollingInterval": "Day",
                    "retainedFileCountLimit": 14,
                    "restrictedToMinimumLevel": "Information",
                    "formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog",
                    "outputTemplate": "{Timestamp:HH:mm:ss}\t{Level:u3}\t{SourceContext}\t{Message}{NewLine}{Exception}"
                }
            },
            {
                "Name": "Seq",
                "Application": "Gestione Sagre Aggregator",
                "Args": {
                    "serverUrl": "http://infra-seq:5341",
                    "ApiKey": "APIKEY-SERVER-SEQ",
                    "restrictedToMinimumLevel": "Information",
                    "outputTemplate": "{Timestamp:HH:mm:ss}\t{Level:u3}\t{SourceContext}\t{Message}{NewLine}{Exception}"
                }
            }
        ]
    },
    "HealthCheck": {
        "HeaderText": "Gestione Sagre HealthCheck Aggregator",
        "PollingInterval": 30,
        "UIPath": "/health-ui",
        "ApiPath": "/health-api"
    },
    "ConnectionStrings": {
        "Default": "Data Source=[HOSTNAME];Initial Catalog=GestioneSagre-HealthChecks;User ID=sa;Password=[PASSWORD];Encrypt=False",
        "Docker": "server=sqlserver;database=gestionesagre-HealthChecks;user=sa;password=[PASSWORD];encrypt=false",
        "TypeStartup": "Default"
    },
    "Services": [
        {
            "Name": "Gateway Service",
            "Url": "http://api-gateway:5001/health"
        },
        {
            "Name": "Data Protection Service",
            "Url": "http://api-dataprotection:5001/health"
        }
    ]
}