@inject NavigationManager Navigation

<MudBadge Content="@NumberNotifications" Color="Color.Default" Overlap="true" Class="mx-6 my-4" Origin="Origin.CenterRight">
    <MudIconButton Icon="@Icons.Material.Filled.Notifications" Color="Color.Default" OnClick="OpenAboutNotify" Disabled="@StatusNotifications" />
</MudBadge>
<MudMenu>
    <ActivatorContent>
        <MudAvatar>
            <MudIcon Icon="@Icons.Material.Filled.AccountCircle" Color="Color.Primary"></MudIcon>
        </MudAvatar>
    </ActivatorContent>
    <ChildContent>
        @* <MudMenuItem Icon="@Icons.Material.Filled.ManageAccounts" Disabled>Preferenze</MudMenuItem>
        <MudMenuItem Icon="@Icons.Material.Filled.SupportAgent" Disabled>Supporto</MudMenuItem> *@
        <MudMenuItem Icon="@Icons.Material.Filled.Info" OnClick="OpenAboutPage">About</MudMenuItem>
        @* <MudDivider />
        <MudMenuItem Icon="@Icons.Material.Filled.Logout" Disabled>Logout</MudMenuItem> *@
    </ChildContent>
</MudMenu>

@code {
    private bool StatusNotifications = true;
    private int NumberNotifications;

    protected override async Task OnInitializedAsync()
    {
        await base.OnInitializedAsync();

        OnChangeNumber(0);
    }

    private void OnChangeNumber(int value)
    {
        NumberNotifications = value;
        StateHasChanged();
    }

    private void OpenAboutPage()
    {
        Navigation.NavigateTo("/about");
    }

    private void OpenAboutNotify()
    {
        Navigation.NavigateTo("/Notifications");
    }
}