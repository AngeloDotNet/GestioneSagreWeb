<MudNavMenu Class="mud-width-full mt-5">
    <MudNavLink Href="/" Icon="@Icons.Material.Filled.Dashboard">Dashboard</MudNavLink>
    <MudDivider />

    <MudNavGroup Title="Operazioni di avvio" Icon="@Icons.Material.Filled.Start" @bind-Expanded="isStartExpanded">
        <MudNavLink Href="#">Configurazione Iniziale</MudNavLink>
        <MudNavLink Href="#">Configurazione Impostazioni</MudNavLink>
    </MudNavGroup>

    <MudDivider />

    <MudNavGroup Title="Magazzino" Icon="@Icons.Material.Filled.Warehouse" @bind-Expanded="isWarehouseExpanded">
        <MudNavLink Href="#">Configurazione Categorie</MudNavLink>
        <MudNavLink Href="#">Configurazione Prodotti</MudNavLink>
        <MudNavLink Href="#">Configurazione Menu</MudNavLink>
    </MudNavGroup>

    <MudDivider />

    <MudNavGroup Title="Cassa" Icon="@Icons.Material.Filled.Store" @bind-Expanded="isStoreExpanded">
        <MudNavLink Href="#">Gestione Festa</MudNavLink>
        <MudNavLink Href="#">Gestione Prenotazioni</MudNavLink>
        <MudNavLink Href="#">Movimenti Cassa</MudNavLink>
    </MudNavGroup>

    <MudDivider />

    <MudNavGroup Title="Scontrini" Icon="@Icons.Material.Filled.Receipt" @bind-Expanded="isReceiptsExpanded">
        <MudNavLink Href="#">Ristampa scontrino</MudNavLink>
        <MudNavLink Href="#">Cambia stato scontrino</MudNavLink>
        <MudNavLink Href="#">Cambia tipo scontrino</MudNavLink>
        <MudNavLink Href="#">Cambia tipo pagamento</MudNavLink>
    </MudNavGroup>

    <MudDivider />

    <MudNavGroup Title="Stampe" Icon="@Icons.Material.Filled.Print" @bind-Expanded="isPrintsExpanded">
        <MudNavLink Href="#">Contabilità cassa</MudNavLink>
        <MudNavLink Href="#">Stampa prenotazioni</MudNavLink>
        <MudNavLink Href="#">Stampa menu</MudNavLink>
    </MudNavGroup>

    <MudDivider />

    <MudNavGroup Title="Statistiche" Icon="@Icons.Material.Filled.QueryStats" @bind-Expanded="isStatsExpanded">
        <MudNavLink Href="#">Consumi giornata</MudNavLink>
        <MudNavLink Href="#">Consumi totali</MudNavLink>
        <MudNavLink Href="#">Riepilogo cassa</MudNavLink>
        <MudNavLink Href="#">Riepilogo incassi</MudNavLink>
    </MudNavGroup>

    @* <MudPaper Class="pa-3 mt-5 rounded-lg" Elevation="0" Outlined="true" Square="true" Style="color: white; background-color:#FF9800; text-align: center">Versione DEMO</MudPaper> *@
</MudNavMenu>

@code {
    private bool isStartExpanded = false;
    private bool isWarehouseExpanded = false;
    private bool isStoreExpanded = false;
    private bool isReceiptsExpanded = false;
    private bool isPrintsExpanded = false;
    private bool isStatsExpanded = false;

    protected override async Task OnInitializedAsync()
    {
        await base.OnInitializedAsync();

        StateHasChanged();
    }
}