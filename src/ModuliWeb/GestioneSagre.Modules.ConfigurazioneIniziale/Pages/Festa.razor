@page "/festa"
@page "/festa/{id:guid}"

<HeaderPage ItemsList="items" />

<PageLayout PageTitle="Gestione Festa">
    <PageContent>
        @if (errorMessage != null)
        {
            <MudPaper>
                <MudText Color="Color.Error">@errorMessage</MudText>
            </MudPaper>
        }

        @if (Id != Guid.Empty)
        {
            <FormEditFesta IdDetail="Id" OnSave="UpdateFestaAsync" />
        }
        else
        {
            <FormFesta Model="model" OnSave="SaveFestaAsync" />
        }
    </PageContent>
</PageLayout>