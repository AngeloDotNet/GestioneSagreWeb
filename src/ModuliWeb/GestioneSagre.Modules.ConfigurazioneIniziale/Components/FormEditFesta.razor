<EditorForm TContent="ConfigInizialeViewModel" Model="Model" Context="EditModel" OnSave="SubmitAsync" OnCancel="CancelAsync">
    <ContentInfo>
        <MudGrid>
            <MudItem xs="12" md="3">
                <MudTextField Label="Nome Festa" @bind-Value="EditModel.Titolo" For="@(() => Model.Titolo)" HelperText="@requiredField" Variant="Variant.Outlined" id="titolo" />
            </MudItem>
            <MudItem xs="12" md="3">
                <MudTextField Label="Edizione" @bind-Value="EditModel.Edizione" For="@(() => Model.Edizione)" HelperText="@requiredField" Variant="Variant.Outlined" id="edizione" />
            </MudItem>
            <MudItem xs="12" md="3">
                <MudTextField Label="Luogo" @bind-Value="EditModel.Luogo" For="@(() => Model.Luogo)" HelperText="@requiredField" Variant="Variant.Outlined" id="luogo" />
            </MudItem>
            <MudItem xs="12" md="3">
                <MudSwitch Label="Gestione Menu" Checked="EditModel.GestioneMenu" CheckedChanged="@(async (bool isChecked) => ChangeStatusGestioneMenu(isChecked))" For="@(() => Model.GestioneMenu)" Variant="Variant.Outlined" Color="Color.Primary" id="gestionemenu" />
                <MudSwitch Label="Gestione Categorie" Checked="EditModel.GestioneCategorie" CheckedChanged="@(async (bool isChecked) => ChangeStatusGestioneCategorie(isChecked))" For="@(() => Model.GestioneCategorie)" Variant="Variant.Outlined" Color="Color.Primary" id="gestionecategorie" />
            </MudItem>
        </MudGrid>
        <MudDivider Style="margin-top:30px; margin-bottom:30px" />
        <MudGrid Style="margin-bottom:30px">
            <MudItem xs="12" md="3">
                <MudDatePicker Label="Data Inizio" @bind-Date="EditModel.DataInizio" For="@(() => Model.DataInizio)" HelperText="@requiredField" Variant="Variant.Outlined" Editable="true" AutoClose="true" id="datainizio" />
            </MudItem>
            <MudItem xs="12" md="3">
                <MudDatePicker Label="Data Fine" @bind-Date="EditModel.DataFine" For="@(() => Model.DataFine)" HelperText="@requiredField" Variant="Variant.Outlined" Editable="true" AutoClose="true" id="datafine" />
            </MudItem>
            <MudItem xs="12" md="3">
                <MudSelect Label="Stato Festa" @bind-Value="EditModel.StatusFesta" Variant="Variant.Outlined" id="status">
                    @foreach (FestaStatus item in Enum.GetValues(typeof(FestaStatus)))
                    {
                        <MudSelectItem Value="@item">@item</MudSelectItem>
                    }
                </MudSelect>
            </MudItem>
            <MudItem xs="12" md="3">
                <MudSwitch Label="Stampa su carta" Checked="EditModel.StampaCarta" CheckedChanged="@(async (bool isChecked) => ChangeStatusStampaCarta(isChecked))" For="@(() => Model.StampaCarta)" Variant="Variant.Outlined" Color="Color.Primary" id="stampacarta" />
                <MudSwitch Label="Stampa ricevuta" Checked="EditModel.StampaRicevuta" CheckedChanged="@(async (bool isChecked) => ChangeStatusStampaRicevuta(isChecked))" For="@(() => Model.StampaRicevuta)" Variant="Variant.Outlined" Color="Color.Primary" id="stamparicevuta" />
            </MudItem>
        </MudGrid>
    </ContentInfo>
</EditorForm>