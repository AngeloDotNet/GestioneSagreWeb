{
    "Kestrel": {
        "Limits": {
            "MaxRequestBodySize": 5242880
        }
    },
    "Serilog": {
        "MinimumLevel": "Information",
        "WriteTo": [
            {
                "Name": "Console",
                "Args": {
                    "outputTemplate": "{Timestamp:HH:mm:ss}\t{Level:u3}\t{SourceContext}\t{Message}{NewLine}{Exception}"
                }
            },
            {
                "Name": "File",
                "Args": {
                    "path": "Logs/log.txt",
                    "rollingInterval": "Day",
                    "retainedFileCountLimit": 14,
                    "restrictedToMinimumLevel": "Information",
                    "formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog",
                    "outputTemplate": "{Timestamp:HH:mm:ss}\t{Level:u3}\t{SourceContext}\t{Message}{NewLine}{Exception}"
                }
            },
            {
                "Name": "Seq",
                "Application": "Gestione Sagre Data Protection",
                "Args": {
                    "serverUrl": "http://SERVER-SEQ:5341",
                    "ApiKey": "APIKEY-SERVER-SEQ",
                    "restrictedToMinimumLevel": "Information",
                    "outputTemplate": "{Timestamp:HH:mm:ss}\t{Level:u3}\t{SourceContext}\t{Message}{NewLine}{Exception}"
                }
            }
        ]
    },
    "ConnectionStrings": {
        "Default": "Data Source=[HOSTNAME];Initial Catalog=GestioneSagre-DataProtection;User ID=sa;Password=[PASSWORD];Encrypt=False",
        "Docker": "server=sqlserver;database=gestionesagre-dataprotection;user=sa;password=[PASSWORD];encrypt=false",
        "TypeStartup": "Default"
    },
    "PointAPI": {
        "Name": "API Service",
        "Url": "http://api-dataprotection:5001/swagger/index.html"
    }
}